

rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
   match /critMessages/{document=**} {        
      allow read;     
    }  
    
    match /works/{document=**} {        
      allow read;     
    }  

    match /users/{document=**} {        
      allow read;     
    }  

        match /book/{document=**} {        
      allow read; 
      allow write;    
    }  
    
    
    match /{document=**} {
    	allow read: if request.auth!=null;
      allow write: if request.auth!=null;
    }

  }
}